          <groupId>com.infoclinika</groupId>
          <artifactId>microarrays-parser-api</artifactId>
          <version>1.0-SNAPSHOT</version>
        </dependency>
      </dependencies>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
