              <finalName>workflow-sdk</finalName>
              <artifactSet>
                <excludes>
                  <exclude>com.google.guava:*</exclude>
                  <exclude>org.hibernate:*</exclude>
                  <exclude>org.springframework:*</exclude>
                </excludes>
              </artifactSet>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>sdk-public</id>
      <dependencies>
        <dependency>
          <groupId>com.infoclinika</groupId>
          <artifactId>tasks-public-api</artifactId>
          <version>1.0-SNAPSHOT</version>
          <scope>compile</scope>
        </dependency>
      </dependencies>
    </profile>
    <profile>
